<Window x:Class="Library.Views.AdminPages.EditingProfile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.Views.AdminPages"
        mc:Ignorable="d"
        Title="EditingProfile" Height="442" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Label x:Name="label" Content="id:" HorizontalAlignment="Left" Margin="64,24,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Label x:Name="label1" Content="Пароль:" HorizontalAlignment="Left" Margin="64,61,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Label x:Name="label2" Content="Ім'я:" HorizontalAlignment="Left" Margin="64,100,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Label x:Name="label3" Content="Прізвище:" HorizontalAlignment="Left" Margin="64,139,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Label x:Name="label4" Content="Телефон:" HorizontalAlignment="Left" Margin="64,178,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Label x:Name="label5" Content="Адреса:" HorizontalAlignment="Left" Margin="64,217,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Label x:Name="label6" Content="Статус:" HorizontalAlignment="Left" Margin="64,256,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Label x:Name="label7" Content="Категорія:" HorizontalAlignment="Left" Margin="64,295,0,0" VerticalAlignment="Top" FontSize="18"/>
        <TextBox x:Name="tbId" HorizontalAlignment="Left" Height="34" Margin="175,24,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="150" VerticalContentAlignment="Center" FontSize="18"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="175,63,0,0" VerticalAlignment="Top" Height="34" Width="150" VerticalContentAlignment="Center"/>
        <TextBox x:Name="tbName" HorizontalAlignment="Left" Height="34" Margin="175,102,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="150" VerticalContentAlignment="Center" FontSize="18"/>
        <TextBox x:Name="tbSurname" HorizontalAlignment="Left" Height="34" Margin="175,141,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="150" VerticalContentAlignment="Center" FontSize="18"/>
        <TextBox x:Name="tbTelephone" HorizontalAlignment="Left" Height="34" Margin="175,180,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="150" VerticalContentAlignment="Center" FontSize="18"/>
        <TextBox x:Name="tbAddress" HorizontalAlignment="Left" Height="34" Margin="175,219,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="150" VerticalContentAlignment="Center" FontSize="18"/>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="175,258,0,0" VerticalAlignment="Top" Width="150" Height="32" VerticalContentAlignment="Center" FontSize="18">
            <ComboBoxItem Name="statusNormal" Content="Активний"/>
            <ComboBoxItem Name="statusBlocked" Content="Блокований"/>
        </ComboBox>
        <ComboBox x:Name="comboBox1" HorizontalAlignment="Left" Margin="175,295,0,0" VerticalAlignment="Top" Width="150" Height="34" VerticalContentAlignment="Center" FontSize="18">
            <ComboBoxItem Name="categoryReader" Content="Читач"/>
            <ComboBoxItem Name="categoryLibririan" Content="Бібліотекар"/>
            <ComboBoxItem Name="categoryAdmin" Content="Адміністратор"/>
        </ComboBox>
        <Button x:Name="btnOK" Content="ОК" HorizontalAlignment="Left" Margin="219,355,0,0" VerticalAlignment="Top" Width="101" Height="35" FontSize="18"/>
        <Button x:Name="btnCancel" Content="Відмінити" HorizontalAlignment="Left" Margin="335,355,0,0" VerticalAlignment="Top" Width="100" Height="35" FontSize="18"/>

    </Grid>
</Window>
