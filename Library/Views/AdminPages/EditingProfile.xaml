<Window x:Class="Library.Views.AdminPages.EditingProfile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.Views.AdminPages"
        mc:Ignorable="d"
        Title="EditingProfile" Height="497" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Label x:Name="label" Content="id:" HorizontalAlignment="Left" Margin="64,24,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Label x:Name="label1" Content="Пароль:" HorizontalAlignment="Left" Margin="64,61,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Label x:Name="label2" Content="Ім'я:" HorizontalAlignment="Left" Margin="64,140,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Label x:Name="label3" Content="Прізвище:" HorizontalAlignment="Left" Margin="64,179,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Label x:Name="label4" Content="Телефон:" HorizontalAlignment="Left" Margin="64,218,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Label x:Name="label5" Content="Адреса:" HorizontalAlignment="Left" Margin="64,257,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Label x:Name="label6" Content="Статус:" HorizontalAlignment="Left" Margin="64,296,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Label x:Name="label7" Content="Категорія:" HorizontalAlignment="Left" Margin="64,335,0,0" VerticalAlignment="Top" FontSize="18"/>
        <TextBox x:Name="tbId" HorizontalAlignment="Left" Height="34" Margin="207,24,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="150" VerticalContentAlignment="Center" FontSize="18"/>
        <PasswordBox x:Name="pbPassword" HorizontalAlignment="Left" Margin="207,63,0,0" VerticalAlignment="Top" Height="34" Width="150" VerticalContentAlignment="Center"/>
        <PasswordBox x:Name="pbCheckPassword" HorizontalAlignment="Left" Margin="207,103,0,0" VerticalAlignment="Top" Height="34" Width="150" VerticalContentAlignment="Center"/>
        <TextBox x:Name="tbName" HorizontalAlignment="Left" Height="34" Margin="207,142,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="150" VerticalContentAlignment="Center" FontSize="18"/>
        <TextBox x:Name="tbSurname" HorizontalAlignment="Left" Height="34" Margin="207,181,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="150" VerticalContentAlignment="Center" FontSize="18"/>
        <TextBox x:Name="tbTelephone" HorizontalAlignment="Left" Height="34" Margin="207,220,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="150" VerticalContentAlignment="Center" FontSize="18"/>
        <TextBox x:Name="tbAddress" HorizontalAlignment="Left" Height="34" Margin="207,259,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="150" VerticalContentAlignment="Center" FontSize="18"/>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="207,298,0,0" VerticalAlignment="Top" Width="150" Height="32" VerticalContentAlignment="Center" FontSize="18">
            <ComboBoxItem Name="statusNormal" Content="Активний" />
            <ComboBoxItem Name="statusBlocked" Content="Блокований"/>
        </ComboBox>
        <ComboBox x:Name="comboBox1" HorizontalAlignment="Left" Margin="207,335,0,0" VerticalAlignment="Top" Width="150" Height="34" VerticalContentAlignment="Center" FontSize="18">
            <ComboBoxItem Name="categoryReader" Content="Читач" />
            <ComboBoxItem Name="categoryLibririan" Content="Бібліотекар"/>
        </ComboBox>
        <Button x:Name="btnOK" Content="ОК" HorizontalAlignment="Left" Margin="219,395,0,0" VerticalAlignment="Top" Width="101" Height="35" FontSize="18" Click="btnOK_Click"/>
        <Button x:Name="btnCancel" Content="Відмінити" HorizontalAlignment="Left" Margin="335,395,0,0" VerticalAlignment="Top" Width="100" Height="35" FontSize="18" Click="btnCancel_Click"/>
        <Label x:Name="label1_Copy" Content="Повтор пароля:" HorizontalAlignment="Left" Margin="64,101,0,0" VerticalAlignment="Top" FontSize="18"/>


    </Grid>
</Window>
