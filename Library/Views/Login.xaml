<Window x:Class="Library.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.Views"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Login" Height="300" Width="300">
    <Grid>
        <Label x:Name="label" Content="Library" HorizontalAlignment="Left" Margin="110,10,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label x:Name="label1" Content="Введіть логін" HorizontalAlignment="Left" Margin="21,85,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label2" Content="Введіть пароль" HorizontalAlignment="Left" Margin="21,129,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="128,129,0,0" VerticalAlignment="Top" Width="132" Height="30" VerticalContentAlignment="Center"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="30" Margin="128,84,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="132" VerticalContentAlignment="Center"/>
        <Button x:Name="button" Content="Увійти" HorizontalAlignment="Left" Margin="101,200,0,0" VerticalAlignment="Top" Width="94" Height="25"/>

    </Grid>
</Window>
