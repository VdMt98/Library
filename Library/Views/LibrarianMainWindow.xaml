        xmlns:local="clr-namespace:Library.Views"
        mc:Ignorable="d"
        Title="LibrarianMainWindow" WindowState="Maximized" Height="742" Width="1366">
    <Grid>
        <Separator HorizontalAlignment="Left" Height="5" Margin="-139,325,0,0" VerticalAlignment="Top" Width="768" RenderTransformOrigin="0.5,0.5" Background="#FF858585">
            <Separator.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="90"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Separator.RenderTransform>
        </Separator>
        <Frame x:Name="frame" Content="Browser" HorizontalAlignment="Left" Height="691" Margin="255,10,0,0" VerticalAlignment="Top" Width="1093" NavigationUIVisibility="Hidden"/>
        <Button x:Name="button" Content="Вихід" HorizontalAlignment="Left" Margin="65,660,0,0" VerticalAlignment="Top" Width="115" Height="30" FontSize="15"/>
        <Separator HorizontalAlignment="Left" Height="5" Margin="0,125,0,0" VerticalAlignment="Top" Width="245"/>
        <Menu x:Name="menu" HorizontalAlignment="Left" Height="158" Margin="10,135,0,0" VerticalAlignment="Top" Width="225" Background="White">
            <MenuItem Name="issuance" Height="45" Width="225" Click="MenuItem_Click" BorderBrush="Black">
                <MenuItem.Header>
                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20,0,-19,0" FontSize="15">Оформити видачу книги</TextBlock>
                </MenuItem.Header>
            </MenuItem>
            <MenuItem x:Name="returning" Height="45" Width="225" Click="MenuItem_Click" BorderBrush="Black" Background="White" Margin="0,10,0,0">
                <MenuItem.Header>
                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,3,0" FontSize="15"><Run Text="Оформити повернення книги"/></TextBlock>
                </MenuItem.Header>
            </MenuItem>
            <MenuItem x:Name="search" Height="45" Width="225" Click="MenuItem_Click" BorderBrush="Black" Background="White" Margin="0,10,0,0">
                <MenuItem.Header>
                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Margin="84,0,-82,0" FontSize="15"><Run Text="Пошук"/></TextBlock>
                </MenuItem.Header>
            </MenuItem>
        </Menu>
        <Separator HorizontalAlignment="Left" Height="5" Margin="0,298,0,0" VerticalAlignment="Top" Width="245"/>
    </Grid>
</Window>
