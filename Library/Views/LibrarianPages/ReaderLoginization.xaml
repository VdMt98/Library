<Page x:Class="Library.Views.LibrarianPages.ReaderLoginization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library.Views.LibrarianPages"
      mc:Ignorable="d" 
      d:DesignHeight="691" d:DesignWidth="1093"
      Title="ReaderLoginization">

    <Grid Background="White">
        <Label x:Name="label" Content="Дані читача" HorizontalAlignment="Left" Margin="451,103,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label x:Name="label1" Content="Логін" HorizontalAlignment="Left" Margin="414,166,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Label x:Name="label2" Content="Пароль" HorizontalAlignment="Left" Margin="414,221,0,0" VerticalAlignment="Top" FontSize="18"/>
        <TextBox x:Name="tbLogin" HorizontalAlignment="Left" Height="34" Margin="490,166,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="130" FontSize="18" VerticalContentAlignment="Center"/>
        <PasswordBox x:Name="pbPassword" HorizontalAlignment="Left" Margin="491,221,0,0" VerticalAlignment="Top" RenderTransformOrigin="-4.167,0.778" Height="34" Width="130" VerticalContentAlignment="Center" FontSize="18"/>
        <Button x:Name="btnLogin" Content="Увійти" HorizontalAlignment="Left" Margin="470,290,0,0" VerticalAlignment="Top" Width="100" Height="35" FontSize="18" Click="btnLogin_Click"/>

    </Grid>
</Page>
